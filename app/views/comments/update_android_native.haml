<plist version="1.0">
%dict
  = "<key>Author</key>"
  = "<string>#{user_name_or_email_escaped(@comment.author)}</string>"
  = "<key>Time</key>"
  = "<string>#{t("ago", :time => time_ago_in_words(@comment.updated_at))}</string>"
  - if @comment.manipulable_by?(@user)
    = "<key>Manipulable</key>"
    = "<true/>"
    = "<key>CommentID</key>"
    = "<string>#{@comment.id}</string>"
    = "<key>UserID</key>"
    = "<string>#{@comment.author_id}</string>"
    = "<key>MeetingID</key>"
    = "<string>#{@meeting.id}</string>"
  - else
    = "<key>Manipulable</key>"
    = "<false/>"
  = "<key>Comment</key>"
  = "<string>#{line_break(CGI.escapeHTML(@comment.text))}</string>"
</plist>