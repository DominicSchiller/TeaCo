<% days = get_day_hash_for( @meeting.suggestions ) %>;
$("#day_bar").html("<%= j render partial: "meetings/day_bar", locals: { days: days } %>");

$("#suggestion_area").html("<%= j render partial: "meetings/suggestion_area", locals: { days: days } %>");
$("#suggestion_area_mobile").html("<%= j render partial: "meetings/suggestion_area_mobile", locals: { days: days } %>");
$("#sugg_mobile_<%= @suggestion.id %>").html("<%= j render partial: "meetings/suggestion_box_mobile.haml", locals: { sugg: @suggestion } %>");
reEnableDragScroll();
adjustSuggestionAreaWidth();
scrollTo("sugg_<%= @suggestion.id %>");
$(".flash_notices").html('<%= j render partial: "shared/flash_notices" %>');